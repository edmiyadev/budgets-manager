generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id        String   @id @default(uuid())
  name      String   @unique
  amount    Float    @default(0)
  type      Type
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  // budgets   Budget[]
}

enum Type {
  income
  expense
}
